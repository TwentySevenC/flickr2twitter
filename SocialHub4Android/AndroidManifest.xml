<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	android:versionCode="1" android:versionName="1.0" package="com.ebay.socialhub">
	<application android:icon="@drawable/icon" android:label="@string/app_name">
		<activity android:name="Login" android:label="@string/app_name">
		</activity>
		<activity android:name=".UserProfileActivity" android:label="@string/app_name"
		android:launchMode="singleTask">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		<activity android:name="AuthorizeActivity" android:label="@string/authorize_app_name">
			<intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<category android:name="android.intent.category.DEFAULT" />
				<category android:name="android.intent.category.BROWSABLE" />
			</intent-filter>
		</activity>
		<activity android:name="SocialHub" android:label="@string/app_name">
		</activity>
		<activity android:name="OAUTHTwitter" android:label="@string/oauth_name">
			<intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<category android:name="android.intent.category.DEFAULT" />
				<category android:name="android.intent.category.BROWSABLE" />
				<data android:scheme="socialhub-app" android:host="twitter" />
			</intent-filter>
		</activity>
		<activity android:name="GoogleOpenIDActivity" android:label="@string/google_openid_oauth">
			<intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<category android:name="android.intent.category.DEFAULT" />
				<category android:name="android.intent.category.BROWSABLE" />
				<data android:scheme="socialhub-openid" android:host="google" />
			</intent-filter>
		</activity>
	</application>
	<uses-sdk android:minSdkVersion="8" />
	<uses-permission android:name="android.permission.INTERNET" />
</manifest> 