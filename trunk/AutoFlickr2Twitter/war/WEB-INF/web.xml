<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

  <!-- Listener -->
  <listener>
  	<listener-class>com.gmail.yuyang226.autoflickr2twitter.core.SystemInitializer</listener-class>
  </listener>
  
  <!-- Servlets -->
  <servlet>
    <servlet-name>greetServlet</servlet-name>
    <servlet-class>com.gmail.yuyang226.autoflickr2twitter.server.GreetingServiceImpl</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>greetServlet</servlet-name>
    <servlet-class>com.gmail.yuyang226.autoflickr2twitter.server.GreetingServiceImpl</servlet-class>
  </servlet>
  
  <servlet>
	<servlet-name>SystemInitial</servlet-name>
  	<servlet-class>com.gmail.yuyang226.autoflickr2twitter.servlet.SystemInitializeServlet</servlet-class>
  	<load-on-startup>3</load-on-startup>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>greetServlet</servlet-name>
    <url-pattern>/autoflickr2twitter/greet</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>recheckServlet</servlet-name>
    <servlet-class>com.gmail.yuyang226.autoflickr2twitter.server.AutoFlirckr2TwitterServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>recheckServlet</servlet-name>
    <url-pattern>/autoflickr2twitter/recheck</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>com.gmail.yuyang226.autoflickr2twitter.twitter.SignInWithTwitter</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>sinacallback</servlet-name>
    <servlet-class>com.gmail.yuyang226.autoflickr2twitter.sina.weibo4j.http.SinaSignInCallBackServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>sinacallback</servlet-name>
    <url-pattern>/sinacallback</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>callback</servlet-name>
    <servlet-class>com.gmail.yuyang226.autoflickr2twitter.twitter.TwitterSignInCallback</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>callback</servlet-name>
    <url-pattern>/callback</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
    <servlet-name>userOperation</servlet-name>
    <servlet-class>com.gmail.yuyang226.autoflickr2twitter.servlet.UserAccountServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>userOperation</servlet-name>
    <url-pattern>/userOperation</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>oauth</servlet-name>
    <servlet-class>com.gmail.yuyang226.autoflickr2twitter.servlet.OAuthServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>oauth</servlet-name>
    <url-pattern>/oauth</url-pattern>
  </servlet-mapping>
  
  
  <!-- 
  <servlet>
    <servlet-name>twitterPostStatus</servlet-name>
    <servlet-class>com.gmail.yuyang226.autoflickr2twitter.twitter.PostTweet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>twitterPostStatus</servlet-name>
    <url-pattern>/tweet</url-pattern>
  </servlet-mapping>
   -->
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>AutoFlickr2Twitter.html</welcome-file>
  </welcome-file-list>

</web-app>
